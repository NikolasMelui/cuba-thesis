<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        messagesPack="com.haulmont.shop.gui.ui.salesperson"
        caption="msg://browserCaption"
        lookupComponent="salespersonsTable"
        >

    <dsContext>
        <collectionDatasource id="salespersonsDs"
                              class="com.haulmont.shop.core.entity.SalesPerson"
                              view="salespersonBrowse">
            <query>
                select b from shop$SalesPerson b
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="table-panel"
              expand="salespersonsTable"
              spacing="true"
              height="100%">

            <groupBox id="filterBox" collapsable="false" stylename="edit-area">
                <filter id="genericSalespersonsFilter"
                        datasource="salespersonsDs">
                    <properties include=".*"
                                exclude=""/>
                </filter>
            </groupBox>

            <table id="salespersonsTable"
                   editable="true" width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                    <action id="refresh"/>
                    <action id="excel"/>
                </actions>
                <buttonsPanel alwaysVisible="true">
                    <button action="salespersonsTable.create" />
                    <button action="salespersonsTable.edit"/>
                    <button action="salespersonsTable.remove"/>
                    <button action="salespersonsTable.excel"/>
                    <button action="salespersonsTable.refresh"/>
                </buttonsPanel>
                <rowsCount/>
                <columns>
                    <column id="user"/>
                    <column id="personalData.fullName"/>
                    <column id="personalData.birthday"/>
                    <column id="personalData.email"/>
                    <column id="personalData.phone"/>
                    <column id="address"/>
                    <column id="worksFrom"/>
                </columns>
                <rows datasource="salespersonsDs"/>
            </table>
        </vbox>
    </layout>
</window>
