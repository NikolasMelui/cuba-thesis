<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        messagesPack="com.haulmont.shop.gui.ui.sale"
        caption="msg://browserCaption"
        lookupComponent="salesTable"
        >

    <dsContext>
        <collectionDatasource id="salesDs"
                              class="com.haulmont.shop.core.entity.Sale"
                              view="saleBrowse">
            <query>
                select s from shop$Sale s
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="table-panel"
              expand="salesTable"
              spacing="true"
              height="100%">

            <groupBox id="filterBox" collapsable="false" stylename="edit-area">
                <filter id="genericSalesFilter"
                        datasource="salesDs">
                    <properties include=".*"
                                exclude=""/>
                </filter>
            </groupBox>

            <table id="salesTable"
                   editable="true" width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                    <action id="refresh"/>
                    <action id="excel"/>
                </actions>
                <buttonsPanel>
                    <button action="salesTable.create"/>
                    <button action="salesTable.edit"/>
                    <button action="salesTable.remove"/>
                    <button action="salesTable.excel"/>
                    <button action="salesTable.refresh"/>
                </buttonsPanel>
                <rowsCount/>
                <columns>
                    <column id="buyer"/>
                    <column id="product"/>
                    <column id="salesPerson"/>
                    <column id="orderDate"/>
                    <column id="deliveryDate"/>
                    <column id="quantity"/>
                    <column id="price"/>
                    <column id="priceDescription"/>
                    <column id="deliveryAddress"/>
                </columns>
                <rows datasource="salesDs"/>
            </table>
        </vbox>
    </layout>
</window>
