<window xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.gui.components.AbstractEditor"
        caption="msg://editorCaption"
        datasource="buyerDs"
        messagesPack="com.haulmont.shop.gui.buyer"
        focusComponent="buyerFieldGroup">

    <dsContext>
        <datasource id="buyerDs"
                    class="com.haulmont.shop.entity.Buyer"
                    view="_local">
            <collectionDatasource id="discountsDs" property="discounts"/>
        </datasource>
    </dsContext>

    <layout spacing="true" expand="windowActions">
        <fieldGroup id="buyerFieldGroup"
                    datasource="buyerDs">
            <column width="250px">
                <field id="firstName"/>
                <field id="surName"/>
                <field id="birthday"/>
                <field id="email"/>
                <field id="phone"/>
                <field id="deliveryAddress"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions" screen="editWindowActions"/>
    </layout>
</window>