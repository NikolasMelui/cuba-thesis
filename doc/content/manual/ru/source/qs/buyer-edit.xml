<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.gui.components.AbstractEditor"
        caption="msg://editorCaption"
        datasource="buyerDs"
        messagesPack="com.haulmont.shop.gui.ui.buyer"
        focusComponent="personalFieldGroup">

    <dsContext>
        <datasource id="buyerDs"
                    class="com.haulmont.shop.core.entity.Buyer"
                    view="buyerEdit">
            <collectionDatasource id="discountsDs" property="discounts"/>
        </datasource>
    </dsContext>

    <layout expand="buyerProfile">
        <vbox spacing="true" expand="discountBox" id="buyerProfile">
            <fieldGroup id="personalFieldGroup"
                        datasource="buyerDs"
                        stylename="edit-area">
                <column width="250px">
                    <field id="firstName"/>
					<field id="surName"/>
                    <field id="birthday"/>
                    <field id="email"/>
                    <field id="phone"/>
                    <field id="deliveryAddress"/>
                </column>
            </fieldGroup>

            <vbox id="discountBox" expand="discountsTable" margin="true" spacing="true">
                <label value="msg://discounts" stylename="h2"/>
                <table id="discountsTable"
                       editable="false" width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="refresh"/>
                        <action id="excel"/>
                    </actions>
                    <buttonsPanel>
                        <button action="discountsTable.create" icon="icons/create.png"/>
                        <button action="discountsTable.edit"/>
                        <button action="discountsTable.remove"/>
                        <button action="discountsTable.excel"/>
                        <button action="discountsTable.refresh"/>
                    </buttonsPanel>
                    <rowsCount/>
                    <columns>
                        <column id="minQuantity"/>
                        <column id="price"/>
                        <column id="fromDate"/>
                        <column id="tillDate"/>
                    </columns>
                    <rows datasource="discountsDs"/>
                </table>
            </vbox>
        </vbox>
        <iframe id="windowActions" screen="editWindowActions"/>
    </layout>
</window>