<window xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.gui.components.AbstractEditor"
        caption="msg://editorCaption"
        datasource="buyerDs"
        messagesPack="com.haulmont.shop.gui.buyer"
        focusComponent="buyerFieldGroup">

    <dsContext>
        <datasource id="buyerDs"
                    class="com.haulmont.shop.entity.Buyer"
                    view="buyerEdit">
            <collectionDatasource id="discountsDs"
                                  property="discounts"/>
        </datasource>
    </dsContext>

    <layout spacing="true" expand="discountBox">
        <fieldGroup id="buyerFieldGroup"
                    datasource="buyerDs">
            <column width="250px">
                <field id="firstName"/>
                <field id="surName"/>
                <field id="birthday"/>
                <field id="email"/>
                <field id="phone"/>
                <field id="deliveryAddress"/>
            </column>
        </fieldGroup>
        <vbox id="discountBox" expand="discountsTable"
              spacing="true">
            <label value="msg://discounts" stylename="h2"/>
            <table id="discountsTable" width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                    <action id="excel"/>
                </actions>
                <buttonsPanel>
                    <button action="discountsTable.create"/>
                    <button action="discountsTable.edit"/>
                    <button action="discountsTable.remove"/>
                    <button action="discountsTable.excel"/>
                </buttonsPanel>
                <columns>
                    <column id="minQuantity"/>
                    <column id="price"/>
                    <column id="fromDate"/>
                    <column id="tillDate"/>
                </columns>
                <rows datasource="discountsDs"/>
            </table>
        </vbox>
        <iframe id="windowActions" screen="editWindowActions"/>
    </layout>
</window>