<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:task="http://www.springframework.org/schema/task"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd">

    <bean class="com.haulmont.cuba.core.sys.CubaPropertyPlaceholderConfigurer"/>

    <!-- Persistence setup -->

    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:comp/env/jdbc/CubaDS"/>
        <property name="resourceRef" value="true"/>
    </bean>

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
          lazy-init="false">
        <property name="persistenceXmlLocation" value="classpath:persistence.xml"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="jpaVendorAdapter">
            <bean class="com.haulmont.cuba.core.sys.CubaOpenJpaVendorAdapter"/>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- AOP setup -->

    <bean id="serviceInterceptor" class="com.haulmont.cuba.core.sys.ServiceInterceptor"/>

    <bean id="mbeanInterceptor" class="com.haulmont.cuba.core.sys.MBeanInterceptor"/>

    <aop:config proxy-target-class="false">
        <aop:aspect id="serviceAspect" ref="serviceInterceptor">
            <aop:around method="aroundInvoke" pointcut="@within(org.springframework.stereotype.Service)"/>
        </aop:aspect>

        <aop:aspect id="mbeanAspect" ref="mbeanInterceptor">
            <aop:around method="aroundInvoke" pointcut="execution(* com.haulmont..*MBean.*(..))"/>
        </aop:aspect>
    </aop:config>

    <!-- Global Providers -->

    <bean id="cuba_ConfigProvider" class="com.haulmont.cuba.core.sys.ConfigProviderImpl"/>

    <bean id="cuba_MessageProvider" class="com.haulmont.cuba.core.sys.MessageProviderImpl"/>

    <bean id="cuba_MetadataProvider" class="com.haulmont.cuba.core.sys.MetadataProviderImpl">
        <property name="clusterManager" ref="cuba_ClusterManager"/>
    </bean>

    <bean id="cuba_ScriptingProvider" class="com.haulmont.cuba.core.sys.ScriptingProviderImpl">
        <constructor-arg index="0" ref="cuba_ConfigProvider"/>
        <constructor-arg index="1" ref="cuba_ClusterManager"/>
    </bean>

    <bean id="cuba_TimeProvider" class="com.haulmont.cuba.core.sys.TimeProviderImpl"/>

    <bean id="cuba_UuidProvider" class="com.haulmont.cuba.core.sys.UuidProviderImpl"/>

    <!-- Middleware Providers -->

    <bean id="cuba_Locator" class="com.haulmont.cuba.core.sys.LocatorImpl">
        <property name="transactionManager" ref="transactionManager"/>
        <property name="persistenceProvider" ref="cuba_PersistenceProvider"/>
    </bean>

    <bean id="cuba_PersistenceProvider" class="com.haulmont.cuba.core.sys.SpringPersistenceProvider">
        <property name="jpaEmf" ref="entityManagerFactory"/>
    </bean>

    <bean id="cuba_SecurityProvider" class="com.haulmont.cuba.core.sys.SecurityProviderImpl"/>

    <!-- Various beans -->

    <bean id="cuba_TimeBetweenQueryMacroHandler" class="com.haulmont.cuba.core.sys.TimeBetweenQueryMacroHandler"
          scope="prototype"/>

    <bean id="cuba_TimeTodayQueryMacroHandler" class="com.haulmont.cuba.core.sys.TimeTodayQueryMacroHandler"
          scope="prototype"/>

    <!-- Annotation-based beans -->

    <context:component-scan base-package="com.haulmont.cuba"/>

    <!-- MBeans registration -->

    <bean id="cuba_MBeanExporter" class="org.springframework.jmx.export.MBeanExporter" lazy-init="false">
        <property name="beans">
            <map>
                <entry key="${cuba.webContextName}.cuba:service=PersistenceConfig"
                       value-ref="cuba_PersistenceConfig"/>
                <entry key="${cuba.webContextName}.cuba:service=ConfigStorage" value-ref="cuba_ConfigStorage"/>
                <entry key="${cuba.webContextName}.cuba:service=DataCache" value-ref="cuba_DataCache"/>
                <entry key="${cuba.webContextName}.cuba:service=ResourceRepository"
                       value-ref="cuba_ResourceRepository"/>
                <entry key="${cuba.webContextName}.cuba:service=UserSessions" value-ref="cuba_UserSessions"/>
                <entry key="${cuba.webContextName}.cuba:service=UniqueNumbers" value-ref="cuba_UniqueNumbers"/>
                <entry key="${cuba.webContextName}.cuba:service=Emailer" value-ref="cuba_Emailer"/>
                <entry key="${cuba.webContextName}.cuba:service=EntityLog" value-ref="cuba_EntityLog"/>
                <entry key="${cuba.webContextName}.cuba:service=ReportEngine" value-ref="cuba_ReportEngine"/>
                <entry key="${cuba.webContextName}.cuba:service=FileStorage" value-ref="cuba_FileStorage"/>
                <entry key="${cuba.webContextName}.cuba:service=LockManager" value-ref="cuba_LockManager"/>
                <entry key="${cuba.webContextName}.cuba:service=CachingFacade" value-ref="cuba_CachingFacade"/>
                <entry key="${cuba.webContextName}.cuba:service=ClusterManager" value-ref="cuba_ClusterManager"/>
                <entry key="${cuba.webContextName}.cuba:service=CubaDeployer" value-ref="cuba_CubaDeployer"/>
            </map>
        </property>
        <property name="assembler">
            <bean class="org.springframework.jmx.export.assembler.InterfaceBasedMBeanInfoAssembler">
                <property name="interfaceMappings">
                    <map>
                        <entry key="cuba_PersistenceConfig" value="com.haulmont.cuba.core.app.PersistenceConfigMBean"/>
                        <entry key="cuba_ConfigStorage" value="com.haulmont.cuba.core.app.ConfigStorageMBean"/>
                        <entry key="cuba_DataCache" value="com.haulmont.cuba.core.app.DataCacheMBean"/>
                        <entry key="cuba_ResourceRepository"
                               value="com.haulmont.cuba.core.app.ResourceRepositoryMBean"/>
                        <entry key="cuba_UserSessions" value="com.haulmont.cuba.security.app.UserSessionsMBean"/>
                        <entry key="cuba_UniqueNumbers" value="com.haulmont.cuba.core.app.UniqueNumbersMBean"/>
                        <entry key="cuba_Emailer" value="com.haulmont.cuba.core.app.EmailerMBean"/>
                        <entry key="cuba_EntityLog" value="com.haulmont.cuba.security.app.EntityLogMBean"/>
                        <entry key="cuba_ReportEngine" value="com.haulmont.cuba.core.app.ReportEngineMBean"/>
                        <entry key="cuba_FileStorage" value="com.haulmont.cuba.core.app.FileStorageMBean"/>
                        <entry key="cuba_LockManager" value="com.haulmont.cuba.core.app.LockManagerMBean"/>
                        <entry key="cuba_CachingFacade" value="com.haulmont.cuba.core.app.CachingFacadeMBean"/>
                        <entry key="cuba_ClusterManager" value="com.haulmont.cuba.core.app.ClusterManagerMBean"/>
                        <entry key="cuba_CubaDeployer" value="com.haulmont.cuba.core.app.CubaDeployerMBean"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>

    <!-- Old-style MBeans access support -->

    <bean id="haulmont_cuba_service_PersistenceConfig" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=PersistenceConfig"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.PersistenceConfigMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_ConfigStorage" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=ConfigStorage"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.ConfigStorageMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_DataCache" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=DataCache"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.DataCacheMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_ResourceRepository" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=ResourceRepository"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.ResourceRepositoryMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_UserSessions" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=UserSessions"/>
        <property name="proxyInterface" value="com.haulmont.cuba.security.app.UserSessionsMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_UniqueNumbers" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=UniqueNumbers"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.UniqueNumbersMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_Emailer" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=Emailer"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.EmailerMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_EntityLog" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=EntityLog"/>
        <property name="proxyInterface" value="com.haulmont.cuba.security.app.EntityLogMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_ReportEngine" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=ReportEngine"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.ReportEngineMBean"/>
    </bean>

    <bean id="haulmont_cuba_service_FileStorage" class="org.springframework.jmx.access.MBeanProxyFactoryBean">
        <property name="objectName" value="${cuba.webContextName}.cuba:service=FileStorage"/>
        <property name="proxyInterface" value="com.haulmont.cuba.core.app.FileStorageMBean"/>
    </bean>

    <!-- Scheduling setup -->

    <bean id="scheduler" class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
        <property name="daemon" value="true"/>
        <property name="poolSize" value="10"/>
    </bean>

    <task:scheduled-tasks scheduler="scheduler">
        <task:scheduled ref="cuba_Heartbeat" method="beat" fixed-rate="1000"/>
        <task:scheduled ref="cuba_LockManager" method="expireLocks" fixed-rate="60000"/>
    </task:scheduled-tasks>

    <!-- Email setup -->

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${cuba.email.smtpHost}"/>
        <property name="username" value="${cuba.email.username}"/>
        <property name="password" value="${cuba.email.password}"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">${cuba.email.authRequired}</prop>
            </props>
        </property>
    </bean>

    <bean id="mailSenderPostProcessor" class="com.haulmont.cuba.core.app.JavaMailSenderPostProcessor">
        <property name="authRequired" value="${cuba.email.authRequired}"/>
    </bean>

</beans>