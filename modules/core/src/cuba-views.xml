<views xmlns="http://www.haulmont.com/schema/cuba/view.xsd">

    <include file="com/haulmont/cuba/report/report.views.xml"/>

    <view class="com.haulmont.cuba.security.entity.User" name="app">
        <property name="login"/>
        <property name="name"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.UserSubstitution" name="app">
        <property name="substitutedUser" view="app"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.FilterEntity" name="app">
        <property name="componentId"/>
        <property name="name"/>
        <property name="code"/>
        <property name="xml"/>
        <property name="user" view="app"/>
    </view>

    <view entity="sec$User" name="user.edit" extends="_local">
        <property name="group">
            <property name="name"/>
        </property>
        <property name="userRoles" view="user.edit"/>
        <property name="substitutions" view="user.edit"/>
    </view>

    <view entity="sec$UserRole" name="user.edit">
        <property name="role">
            <property name="name"/>
            <property name="locName"/>
            <property name="defaultRole"/>
        </property>
    </view>

    <view entity="sec$User" name="user.browse" extends="_local">
        <property name="group" view="_local"/>
    </view>

    <view entity="sec$User" name="user.copySettings" extends="_minimal">
        <property name="login" />
        <property name="name" />
    </view>

    <view class="com.haulmont.cuba.security.entity.User" name="user.changepassw">
        <property name="password"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.UserSubstitution" name="user.edit">
        <property name="substitutedUser">
            <property name="login"/>
            <property name="name"/>
        </property>
        <property name="endDate"/>
    </view>

    <view entity="sec$Group" name="group.lookup">
        <property name="name"/>
    </view>

    <view entity="sec$Group" name="group.browse">
        <property name="name"/>
        <property name="parent"/>
    </view>

    <view entity="sec$User" name="group.browse">
        <property name="name"/>
        <property name="login"/>
        <property name="group"/>
    </view>

    <view entity="sec$Constraint" name="group.browse">
        <property name="group" view="group.lookup"/>
        <property name="entityName"/>
        <property name="joinClause"/>
        <property name="whereClause"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.SessionAttribute" name="edit" extends="_local">
        <property name="group" view="_local"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.Presentation" name="app">
        <property name="componentId"/>
        <property name="name"/>
        <property name="xml"/>
        <property name="user" view="app"/>
        <property name="autoSave"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.ScreenHistoryEntity" name="browse" extends="_local">
        <property name="user" view="_minimal"/>
    </view>

    <view entity="sys$SendingMessage" name="sendingMessage.browse">
        <property name="address"/>
        <property name="attachments"/>
        <property name="attachmentsName"/>
        <property name="attemptsCount"/>
        <property name="attemptsMade"/>
        <property name="caption"/>
        <property name="contentText"/>
        <property name="dateSent"/>
        <property name="deadline"/>
        <property name="from"/>
        <property name="status"/>
    </view>

    <view entity="sys$CategoryAttributeValue" name="categoryAttributeValue" extends="_local">
        <property name="categoryAttribute" view="_local"/>
    </view>

    <view entity="sys$Category" name="category.edit" extends="_local">
        <property name="categoryAttrs" view="_local"/>
    </view>

    <view entity="sys$Category" name="category.defaultEdit" extends="_minimal">
        <property name="isDefault"/>
    </view>

</views>