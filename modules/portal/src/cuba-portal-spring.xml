<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd

        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd"
        >

    <bean class="com.haulmont.cuba.core.sys.CubaPropertyPlaceholderConfigurer"/>

    <!-- Annotation-based beans -->

    <context:component-scan base-package="com.haulmont.cuba.core.sys"/>
    <context:component-scan base-package="com.haulmont.cuba.client.sys"/>
    <context:component-scan base-package="com.haulmont.cuba.portal.sys"/>

    <bean id="cuba_UserSessionSource" class="com.haulmont.cuba.portal.sys.security.PortalUserSessionSource"/>

    <!-- Various beans with non-standard configuration -->

    <bean id="cuba_UserSession" factory-bean="cuba_UserSessionSource" factory-method="getUserSession"
          scope="prototype"/>

    <bean id="cuba_Connection" class="com.haulmont.cuba.portal.sys.PortalConnection"
          scope="prototype"/>

    <!-- MBeans registration -->

    <bean id="cuba_web_MBeanExporter" class="com.haulmont.cuba.jmxcontrol.export.MBeanExporter" lazy-init="false">
        <property name="beans">
            <map>
                <entry key="${cuba.webContextName}.cuba:service=Configuration"
                       value-ref="cuba_PortalConfigurationMBean"/>
            </map>
        </property>
    </bean>

    <!-- Remote stubs -->

    <bean id="cuba_clusterInvocationSupport" class="com.haulmont.cuba.core.sys.remoting.ClusterInvocationSupport"
          init-method="init">
        <property name="baseUrl" value="${cuba.connectionUrl}"/>
        <property name="servletPath" value="remoting"/>
    </bean>

    <bean id="cuba_proxyCreator" class="com.haulmont.cuba.portal.sys.remoting.PortalRemoteProxyBeanCreator">
        <property name="clusterInvocationSupport" ref="cuba_clusterInvocationSupport"/>
        <property name="remoteServices">
            <map>
                <entry key="cuba_LoginService" value="com.haulmont.cuba.security.app.LoginService"/>
                <entry key="cuba_DataService" value="com.haulmont.cuba.core.app.DataService"/>
                <entry key="cuba_UserSessionService" value="com.haulmont.cuba.security.app.UserSessionService"/>
                <entry key="cuba_ServerInfoService" value="com.haulmont.cuba.core.app.ServerInfoService"/>
                <entry key="cuba_LocalizedMessageService" value="com.haulmont.cuba.core.app.LocalizedMessageService"/>
                <entry key="cuba_PersistenceManagerService" value="com.haulmont.cuba.core.app.PersistenceManagerService"/>
                <entry key="cuba_EmailService" value="com.haulmont.cuba.core.app.EmailService"/>
            </map>
        </property>
    </bean>

    <!-- Exception handlers -->

    <bean id="cuba_exceptionHandlersConf" class="com.haulmont.cuba.portal.sys.exception.ExceptionHandlersConfiguration">
        <property name="handlerClasses">
            <list>
                <value>com.haulmont.cuba.portal.sys.exception.NoUserSessionHandler</value>
                <value>com.haulmont.cuba.portal.sys.exception.SilentExceptionHandler</value>
            </list>
        </property>
    </bean>

</beans>
