<theme xmlns="http://schemas.haulmont.com/cuba/4.0/desktop-theme.xsd">

    <lookAndFeel>javax.swing.plaf.nimbus.NimbusLookAndFeel</lookAndFeel>
    <class>com.haulmont.cuba.desktop.theme.impl.NimbusTheme</class>

    <ui-defaults>
        <font property="CollapsiblePanel.font" family="SansSerif" size="12" style="bold"/>
        <insets property="CollapsiblePanel.borderInsets" value="6 6 6 6"/>
        <color property="Hyperlink.visitedColor" value="#0033ff"/>
        <color property="Hyperlink.linkColor" value="#0033ff"/>
        <dimension property="Table.intercellSpacing" value="1 1"/>
        <color property="nimbusOrange" value="#33628c"/>
        <!-- make orange to be the same as nimbusBase -->
        <insets property="Button.contentMargins" value="6 12 6 12"/>
        <!-- default is 6 14 6 14 -->
        <!--<color property="cubaRequired" value="#c0250f"/>-->
        <color property="cubaRequiredBackground" value="#fffbb9"/>
    </ui-defaults>

    <layout margin-size="5" spacing-size="3"/>

    <style name="h2">
        <font family="Verdana" style="bold" size="14"/>
    </style>

    <style name="centered">
    </style>

    <style name="edit-area">
        <components>
            com.haulmont.cuba.desktop.gui.components.DesktopVBox
            com.haulmont.cuba.desktop.gui.components.DesktopHBox
            com.haulmont.cuba.desktop.gui.components.DesktopGridLayout
        </components>
        <border type="compound">
            <border type="empty" margins="5 5 5 5"/>
            <border type="line" color="128 128 128"/>
        </border>
    </style>

    <style name="edit-area">
        <components>
            com.haulmont.cuba.desktop.gui.components.DesktopGroupBox
            com.haulmont.cuba.desktop.gui.components.DesktopFieldGroup
        </components>
    </style>

    <!-- empty styles for diff-view frame -->
    <style name="addedItem">

    </style>

    <style name="modifiedItem">

    </style>

    <style name="removedItem">

    </style>

    <style name="chainItem">

    </style>

    <style name="categoryItem">

    </style>

    <!-- empty styles for role-edit frame -->

    <style name="allowedItem">

    </style>

</theme>
