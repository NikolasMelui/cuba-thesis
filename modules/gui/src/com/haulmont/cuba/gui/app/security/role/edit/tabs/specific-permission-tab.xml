<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        messagesPack="com.haulmont.cuba.gui.app.security.role.edit">

    <dsContext>
        <collectionDatasource id="specificPermissionsDs"
                              class="com.haulmont.cuba.security.entity.Permission"
                              view="role.edit">
            <datasourceClass>com.haulmont.cuba.gui.security.RestorablePermissionDatasource</datasourceClass>
            <query>select p from sec$Permission p where p.role.id = :ds$roleDs and p.type = 40</query>
        </collectionDatasource>
    </dsContext>

    <#assign width = 200>
    <#assign treeHeight = 400>
    <#assign treeWidth = 500>
    <#assign widthPPB = 120>
    <#assign widthPPBMenu = 100>
    <layout expandLayout="true">
        <vbox expand="specificPermissionsTable" margin="true" spacing="true">
            <buttonsPanel>
                <popupButton id="specificPermissionsGrant" icon="icons/add.png"
                             caption="msg://permissions.grant"
                             width="${widthPPB}" menuWidth="${widthPPBMenu}"/>
                <button id="specificPermissionsRemove" action="specificPermissionsTable.remove"
                        caption="msg://permissions.remove" icon="icons/remove.png"/>
            </buttonsPanel>
            <table id="specificPermissionsTable">
                <columns>
                    <column id="target" caption="msg://target"/>
                    <column id="value" caption="msg://value"/>
                </columns>
                <rows datasource="specificPermissionsDs"/>
            </table>
        </vbox>
    </layout>
</window>