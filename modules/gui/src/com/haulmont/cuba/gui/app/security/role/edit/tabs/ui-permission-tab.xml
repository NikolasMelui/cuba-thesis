<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        messagesPack="com.haulmont.cuba.gui.app.security.role.edit"
        class="com.haulmont.cuba.gui.app.security.role.edit.tabs.UiPermissionsFrame">

    <companions>
        <web class="com.haulmont.cuba.web.app.ui.security.role.UiPermissionsFrameCompanion"/>
        <desktop class="com.haulmont.cuba.desktop.app.security.role.UiPermissionsFrameCompanion"/>
    </companions>

    <dsContext>
        <collectionDatasource id="uiPermissionsDs"
                              class="com.haulmont.cuba.security.entity.Permission"
                              view="role.edit">
            <datasourceClass>com.haulmont.cuba.gui.security.RestorablePermissionDatasource</datasourceClass>
            <query>select p from sec$Permission p where p.role.id = :ds$roleDs and p.type = 50</query>
        </collectionDatasource>

        <groupDatasource id="uiPermissionTargetsDs"
                              class="com.haulmont.cuba.security.entity.ui.UiPermissionTarget"
                              view="_local">
            <datasourceClass>com.haulmont.cuba.gui.security.UiPermissionsDatasource</datasourceClass>
        </groupDatasource>
    </dsContext>

    <layout expandLayout="true" expand="contentPane">
        <!-- Filter -->
        <hbox expand="spacer" width="100%" spacing="true" margin="true">
            <label value="msg://screen"/>
            <lookupField id="screenFilter" width="250"/>
            <label width="20"/>
            <label value="msg://component"/>
            <textField id="componentTextField" width="250"/>
            <button id="addPermissionBtn" caption="msg://action.add" invoke="addUiPermission"/>
            <label id="spacer"/>
        </hbox>
        <hbox id="contentPane" expand="tablePane" spacing="true" margin="true">
            <!-- Table -->
            <vbox id="tablePane" expand="entityPermissionsTable">
                <groupTable id="uiPermissionsTable">
                    <columns>
                        <group>
                            <column id="screen" width="200"/>
                        </group>
                        <column id="component"/>
                        <column id="permissionVariant"/>
                    </columns>
                    <rows datasource="uiPermissionTargetsDs"/>
                </groupTable>
            </vbox>
            <!-- Edit pane -->
            <groupBox id="editPane" width="250" height="100%">
                <caption label="msg://permissions"/>

                <vbox id="selectedComponentPanel" expand="panelSpacer" spacing="true" width="100%" visible="false">
                    <label id="selectedTargetCaption" stylename="h2" align="MIDDLE_CENTER"
                            property="component" datasource="uiPermissionTargetsDs"/>

                    <checkBox id="readOnlyCheckBox" caption="msg://checkbox.readOnly"/>
                    <checkBox id="hideCheckBox" caption="msg://checkbox.hide"/>

                    <label id="panelSpacer"/>
                </vbox>
            </groupBox>
        </hbox>
    </layout>
</window>