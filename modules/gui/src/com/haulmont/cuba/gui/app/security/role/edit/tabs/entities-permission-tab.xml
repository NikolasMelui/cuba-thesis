<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        messagesPack="com.haulmont.cuba.gui.app.security.role.edit"
        class="com.haulmont.cuba.gui.app.security.role.edit.tabs.EntityPermissionsFrame">

    <dsContext>
        <collectionDatasource id="entityPermissionsDs"
                              class="com.haulmont.cuba.security.entity.Permission"
                              view="role.edit">
            <query>select p from sec$Permission p where p.role.id = :ds$roleDs and p.type = 20</query>
        </collectionDatasource>

        <collectionDatasource id="entityTargetsDs" class="com.haulmont.cuba.security.ui.OperationPermissionTarget"
                              view="_local">
            <datasourceClass>com.haulmont.cuba.gui.security.EntityPermissionTargetsDatasource</datasourceClass>
        </collectionDatasource>
    </dsContext>

    <#assign width = 200>
    <#assign treeHeight = 400>
    <#assign treeWidth = 500>
    <#assign widthPPB = 120>
    <#assign widthPPBMenu = 100>
    <layout expandLayout="true" expand="contentPane">
        <hbox expand="spacer" width="100%" spacing="true">
            <checkBox id="assignedOnlyCheckBox" caption="msg://assignedOnly"/>
            <label value="msg://entityFilter"/>
            <textField id="entityFilter"/>
            <button id="applyFilterBtn"/>
        </hbox>
        <hbox id="contentPane" expand="tablePane">
            <vbox id="tablePane" expand="entityPermissionsTable" margin="true" spacing="true">
                <table id="entityPermissionsTable">
                    <columns>
                        <column id="target" caption="msg://target"/>
                        <column id="value" caption="msg://value"/>
                    </columns>
                    <rows datasource="entityPermissionsDs"/>
                </table>
            </vbox>
            <groupBox id="editPane">
                <caption label=""/>

                <vbox>

                </vbox>
            </groupBox>
        </hbox>
    </layout>
</window>