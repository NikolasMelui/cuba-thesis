<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        messagesPack="com.haulmont.cuba.gui.app.security.group"
        class="com.haulmont.cuba.gui.app.security.group.browse.GroupBrowser"
        caption="msg://browser.caption"
        focusComponent="groups"
        >
    <dsContext>
        <hierarchicalDatasource
                id="groupsDs"
                class="com.haulmont.cuba.security.entity.Group"
                view="group.browse"
                hierarchyProperty="parent"
                >
            <query>
                <![CDATA[select g from sec$Group g]]>
            </query>
        </hierarchicalDatasource>

        <collectionDatasource
                id="usersDs"
                class="com.haulmont.cuba.security.entity.User"
                view="group.browse">
            <query>select u from sec$User u where u.group.id = :ds$groupsDs</query>
        </collectionDatasource>

        <collectionDatasource
                id="constraintsDs"
                class="com.haulmont.cuba.security.entity.Constraint"
                view="group.browse">
            <query>select c from sec$Constraint c where c.group.id = :ds$groupsDs</query>
        </collectionDatasource>

        <collectionDatasource
                id="attributesDs"
                class="com.haulmont.cuba.security.entity.SessionAttribute"
                view="_local">
            <query>select a from sec$SessionAttribute a where a.group.id = :ds$groupsDs</query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox>
            <split id="split" orientation="horizontal" pos="30">
                <vbox expand="groupsTree" spacing="true" margin="false;true;false;false">
                    <buttonsPanel>
                        <popupButton id="groupCreateButton" caption="msg://create.caption" icon="icons/create.png"/>
                        <button action="groupsTree.edit"/>
                        <button action="groupsTree.remove"/>
                        <button action="groupsTree.refresh"/>
                    </buttonsPanel>
                    <tree id="groupsTree">
                        <actions>
                            <action id="create"/>
                            <action id="copy" caption="msg://action.copy" icon="icons/copy.png" invoke="copyGroup"/>
                            <action id="edit"/>
                            <action id="remove"/>
                            <action id="refresh"/>
                        </actions>
                        <treechildren datasource="groupsDs" captionProperty="name" hierarchyProperty="parent"/>
                    </tree>
                </vbox>
                <vbox expand="group-editor" margin="false;false;false;true">
                    <tabsheet id="tabsheet">
                        <tab id="usersTab" caption="msg://tabsheet.users">
                            <vbox expand="usersTable" spacing="true" margin="true">
                                <buttonsPanel>
                                    <button action="usersTable.create"/>
                                    <button action="usersTable.edit"/>
                                    <button action="usersTable.moveToGroup"/>
                                </buttonsPanel>
                                <table id="usersTable" multiselect="true">
                                    <actions>
                                        <action id="create"/>
                                        <action id="edit"/>
                                        <action id="moveToGroup"/>
                                        <action id="refresh"/>
                                    </actions>
                                    <columns>
                                        <column id="name"/>
                                        <column id="login"/>
                                    </columns>
                                    <rows datasource="usersDs"/>
                                </table>
                            </vbox>
                        </tab>
                        <tab id="constraintsTab" caption="msg://tabsheet.constraints" lazy="true">
                            <vbox expand="constraintsTable" spacing="true" margin="true">
                                <buttonsPanel>
                                    <button action="constraintsTable.create"/>
                                    <button action="constraintsTable.edit"/>
                                    <button action="constraintsTable.remove"/>
                                </buttonsPanel>
                                <table id="constraintsTable">
                                    <actions>
                                        <action id="create"/>
                                        <action id="edit"/>
                                        <action id="remove"/>
                                        <action id="refresh"/>
                                    </actions>
                                    <columns>
                                        <column id="entityName" caption="msg://entity"/>
                                        <column id="joinClause" caption="msg://join"/>
                                        <column id="whereClause" caption="msg://where"/>
                                    </columns>
                                    <rows datasource="constraintsDs"/>
                                </table>
                            </vbox>
                        </tab>
                        <tab id="attributesTab" caption="msg://tabsheet.attributes" lazy="true">
                            <vbox expand="attributesTable" spacing="true" margin="true">
                                <buttonsPanel>
                                    <button action="attributesTable.create"/>
                                    <button action="attributesTable.edit"/>
                                    <button action="attributesTable.remove"/>
                                </buttonsPanel>
                                <table id="attributesTable">
                                    <actions>
                                        <action id="create"/>
                                        <action id="edit"/>
                                        <action id="remove"/>
                                        <action id="refresh"/>
                                    </actions>
                                    <columns>
                                        <column id="name"/>
                                        <column id="datatypeCaption"/>
                                        <column id="stringValue"/>
                                    </columns>
                                    <rows datasource="attributesDs"/>
                                </table>
                            </vbox>
                        </tab>
                    </tabsheet>
                </vbox>
            </split>
        </vbox>
    </layout>
</window>
