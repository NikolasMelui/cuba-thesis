<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.gui.app.security.session.browse.SessionBrowser"
        caption="msg://caption"
        messagesPack="com.haulmont.cuba.gui.app.security.session.browse"
        focusComponent="sessionsTable">

    <metadataContext>
        <deployViews name="/com/haulmont/cuba/gui/app/security/session/session.views.xml"/>
    </metadataContext>

    <dsContext>
        <groupDatasource id="sessionsDs" class="com.haulmont.cuba.security.entity.UserSessionEntity"
                         view="session.browse"
                         datasourceClass="com.haulmont.cuba.gui.app.security.session.browse.UserSessionsDatasource">
        </groupDatasource>
    </dsContext>

    <layout expand="sessionsTable" spacing="true">
        <groupTable id="sessionsTable" multiselect="true" width="100%">
            <actions>
                <action id="refresh" caption="msg://refresh" invoke="refresh"/>
                <action id="message" caption="msg://message" invoke="message"/>
                <action id="kill" caption="msg://kill" invoke="kill"/>
            </actions>
            <buttonsPanel>
                <button action="sessionsTable.refresh"/>
                <button action="sessionsTable.message"/>
                <button action="sessionsTable.kill"/>
            </buttonsPanel>
            <rowsCount/>
            <columns>
                <column id="id" caption="msg://id"/>
                <column id="login" caption="msg://login"/>
                <column id="userName" caption="msg://userName"/>
                <column id="address" caption="msg://address"/>
                <column id="clientInfo" caption="msg://clientInfo"/>
                <column id="since" caption="msg://since"/>
                <column id="lastUsedTs" caption="msg://lastUsedTs"/>
            </columns>
            <rows datasource="sessionsDs"/>
        </groupTable>
        <hbox spacing="true">
            <label value="msg://lastUpdate"/>
            <label id="lastUpdateTsLab"/>
        </hbox>
    </layout>
</window>
