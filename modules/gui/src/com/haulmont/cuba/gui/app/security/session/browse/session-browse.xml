<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.gui.app.security.session.browse.SessionBrowser"
        caption="msg://caption"
        focusComponent="sessions_table">

    <metadataContext>
        <deployViews name="/com/haulmont/cuba/gui/app/security/session/session.views.xml"/>
    </metadataContext>

    <dsContext>
        <collectionDatasource id="sessions" class="com.haulmont.cuba.security.entity.UserSessionEntity"
                              view="session.browse">
            <datasourceClass>com.haulmont.cuba.gui.app.security.session.browse.UserSessionsDatasource</datasourceClass>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox expand="sessions_table" width="100%" height="100%">
            <table id="sessions_table" editable="false">
                <buttonsPanel>
                    <button action="sessions_table.refresh" caption="msg://refresh"/>
                    <button action="sessions_table.kill" caption="msg://kill"/>
                </buttonsPanel>
                <rowsCount/>
                <columns>
                    <column id="id" caption="msg://id"/>
                    <column id="login" caption="msg://login"/>
                    <column id="userName" caption="msg://userName"/>
                    <column id="address" caption="msg://address"/>
                    <column id="clientInfo" caption="msg://clientInfo"/>
                    <column id="since" caption="msg://since"/>
                    <column id="lastUsedTs" caption="msg://lastUsedTs"/>
                </columns>
                <rows datasource="sessions"/>
            </table>
        </vbox>
    </layout>
</window>
