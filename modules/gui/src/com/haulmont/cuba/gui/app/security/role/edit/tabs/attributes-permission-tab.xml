<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        messagesPack="com.haulmont.cuba.gui.app.security.role.edit"
        class="com.haulmont.cuba.gui.app.security.role.edit.tabs.AttributePermissionsFrame">

    <companions>
        <web class="com.haulmont.cuba.web.app.ui.security.role.AttributePermissionsFrameCompanion"/>
        <desktop class="com.haulmont.cuba.desktop.app.security.role.AttributePermissionsFrameCompanion"/>
    </companions>

    <dsContext>
        <collectionDatasource id="propertyPermissionsDs"
                              class="com.haulmont.cuba.security.entity.Permission"
                              view="role.edit">
            <datasourceClass>com.haulmont.cuba.gui.security.RestorablePermissionDatasource</datasourceClass>
            <query>select p from sec$Permission p where p.role.id = :ds$roleDs and p.type = 30</query>
        </collectionDatasource>

        <collectionDatasource id="attributeTargetsDs"
                              class="com.haulmont.cuba.security.entity.ui.MultiplePermissionTarget"
                              view="_local">
            <datasourceClass>com.haulmont.cuba.gui.security.MultiplePermissionTargetsDatasource</datasourceClass>
        </collectionDatasource>
    </dsContext>

    <layout expandLayout="true" expand="contentPane">
        <hbox expand="spacer" width="100%" spacing="true" margin="true">
            <checkBox id="assignedOnlyCheckBox" caption="msg://assignedOnly" align="MIDDLE_LEFT"/>
            <label width="20"/>
            <label value="msg://entityFilter"/>
            <textField id="entityFilter" width="120"/>
            <button id="applyFilterBtn" caption="msg://action.apply" invoke="applyFilter"/>
            <label id="spacer"/>
        </hbox>

        <hbox id="contentPane" expand="tablePane" spacing="true" margin="true">
            <vbox id="tablePane" expand="propertyPermissionsTable">
                <table id="propertyPermissionsTable">
                    <columns>
                        <column id="caption" caption="msg://entities"/>
                        <column id="permissionsInfo"/>
                    </columns>
                    <rows datasource="attributeTargetsDs"/>
                </table>
            </vbox>

            <groupBox id="editPane" width="380" height="100%">
                <caption label="msg://permissions"/>

                <vbox id="selectedEntityPanel" expand="panelScroll" width="100%" visible="true">
                    <label id="selectedTargetCaption" stylename="h2" align="MIDDLE_CENTER"/>

                    <scrollbox id="panelScroll">
                        <vbox id="editGridContainer" width="340">
                        </vbox>
                    </scrollbox>

                    <hbox width="340">
                        <grid margin="true" width="100%">
                            <columns>
                                <column flex="0.4"/>
                                <column flex="0.2"/>
                                <column flex="0.2"/>
                                <column flex="0.2"/>
                            </columns>
                            <rows>
                                <row>
                                    <label value="msg://allEntities"/>
                                    <checkBox id="allModifyCheck" align="MIDDLE_CENTER"/>
                                    <checkBox id="allReadOnlyCheck" align="MIDDLE_CENTER"/>
                                    <checkBox id="allHideCheck" align="MIDDLE_CENTER"/>
                                </row>
                            </rows>
                        </grid>
                    </hbox>
                </vbox>
            </groupBox>
        </hbox>
    </layout>
</window>