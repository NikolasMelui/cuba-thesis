<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.cuba.gui.components.filter.edit.DynamicAttributesConditionFrame"
        messagesPack="com.haulmont.cuba.gui.components.filter.edit">

    <layout spacing="true">
        <grid spacing="true" width="100%">
            <columns>
                <column/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <label id="hiddenLabel" value="msg://hidden" align="MIDDLE_LEFT"/>
                    <checkBox id="hidden"/>
                </row>
                <row>
                    <label id="requiredLabel" value="msg://required" align="MIDDLE_LEFT"/>
                    <checkBox id="required"/>
                </row>
                <row>
                    <label id="widthLabel" value="msg://width" align="MIDDLE_LEFT"/>
                    <lookupField id="width" width="theme://cuba.gui.filterEditor.widthLookup.width"/>
                </row>
                <row>
                    <label id="defaultValueLayoutLabel" htmlEnabled="true" value="msg://defaultValue" align="MIDDLE_LEFT"/>
                    <hbox id="defaultValueLayout" width="100%"/>
                </row>
                <row>
                    <label id="categoryLabel" value="msg://DynamicAttributesConditionFrame.category" align="MIDDLE_LEFT"/>
                    <lookupField id="categoryLookup"
                                 width="theme://cuba.gui.dynamicAttributeConditionFrame.lookup.width"
                                 required="true"/>
                </row>
                <row>
                    <label value="msg://DynamicAttributesConditionFrame.attribute" align="MIDDLE_LEFT"/>
                    <lookupField id="attributeLookup"
                                 width="theme://cuba.gui.dynamicAttributeConditionFrame.lookup.width"
                                 required="true"/>
                </row>
                <row>
                    <label value="msg://DynamicAttributesConditionFrame.operation" align="MIDDLE_LEFT"/>
                    <lookupField id="operationLookup"
                                 width="theme://cuba.gui.dynamicAttributeConditionFrame.lookup.width"
                                 required="true"/>
                </row>
            </rows>
        </grid>
    </layout>
</window>