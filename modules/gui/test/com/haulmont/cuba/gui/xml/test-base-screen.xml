<window xmlns="http://schemas.haulmont.com/cuba/window.xsd">
    <dsContext>
        <datasource id="userDs" class="com.haulmont.cuba.security.entity.User" view="_local"/>
    </dsContext>

    <layout spacing="true">
        <fieldGroup id="fieldGroupLeft" datasource="userDs" width="AUTO">
            <column>
                <field id="login" required="true"/>
                <field id="passw" custom="true"/>
                <field id="confirmPassw" custom="true"/>
                <field id="firstName"/>
                <field id="middleName"/>
                <field id="lastName"/>
                <field id="name"/>
                <field id="email"/>
            </column>
        </fieldGroup>
    </layout>
</window>