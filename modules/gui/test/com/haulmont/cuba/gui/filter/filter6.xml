<filter>
    <or>
        <and>
            <c join=", docflow$DocumentRole dr">d.processState = :custom$filter_state</c>
            <c>d.barCode like :custom$filter_barCode</c>
        </and>
        <c join=", docflow$DocumentRole dr"><![CDATA[d.processState <> :custom$filter_notSigned]]></c>
    </or>
</filter>