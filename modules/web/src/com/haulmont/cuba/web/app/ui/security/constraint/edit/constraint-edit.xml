<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.gui.components.BasicEditor"
        datasource="constraint"
        messagesPack="com.haulmont.cuba.web.app.ui.security.constraint"
        >

    <metadataContext>
        <view class="com.haulmont.cuba.security.entity.Constraint" name="edit">
            <property name="entityName"/>
            <property name="joinClause"/>
            <property name="whereClause"/>
        </view>
    </metadataContext>

    <dsContext>
        <datasource id="constraint" class="com.haulmont.cuba.security.entity.Constraint" view="edit"/>
    </dsContext>

    <layout expand="windowActions">
        <vbox margin="true"  stylename="edit-area">
            <grid id="grid" spacing="true" expandable="false">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://entityName"/>
                        </vbox>
                        <textField id="entityName" datasource="constraint" property="entityName"
                                   width="500px"/>
                    </row>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://joinClause"/>
                        </vbox>
                        <textField id="joinClause" datasource="constraint" property="joinClause"
                                   width="500px" rows="3"/>
                    </row>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://whereClause"/>
                        </vbox>
                        <textField id="whereClause" datasource="constraint" property="whereClause"
                                   width="500px" rows="3"/>
                    </row>
                </rows>
            </grid>
        </vbox>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>

</window>