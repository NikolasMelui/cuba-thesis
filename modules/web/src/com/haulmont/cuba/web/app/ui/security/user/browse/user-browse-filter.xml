<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd">
    <dsContext>
        <collectionDatasource
            id="groups"
            class="com.haulmont.cuba.security.entity.Group"
            view="group.lookup"
        >
            <query>select g from sec$Group g</query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="filter-pane" spacing="true">
            <vbox expand="expand-box" stylename="edit-area" margin="true" >
                <hbox id="group-box" spacing="true">
                    <label control="name" value="msg://name"/>
                    <textField id="name"/>

                    <label control="login" value="msg://login"/>
                    <textField id="login"/>

                    <label control="email" value="msg://email"/>
                    <textField id="email"/>

                    <label control="group" value="msg://group"/>
                    <lookupField id="group" optionsDatasource="groups" captionProperty="name" required="false" nullName="msg://any"/>
                </hbox>
                <hbox id="expand-box"/>
            </vbox>
            <hbox align="MIDDLE_RIGHT" >
                <button id="clear" caption="msg://com.haulmont.cuba.web/actions.Clear"/>
                <button id="apply"/>
            </hbox>
        </vbox>
    </layout>
</window>