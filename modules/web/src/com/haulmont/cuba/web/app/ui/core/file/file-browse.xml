<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.web.app.ui.core.file.FileBrowser">

    <metadataContext>
        <deployViews name="/com/haulmont/cuba/web/app/ui/core/file/file.views.xml"/>
    </metadataContext>

    <dsContext>
        <collectionDatasource id="filesDs" class="com.haulmont.cuba.core.entity.FileDescriptor" view="browse">
            <query>
                select f from core$FileDescriptor f order by f.createDate
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox margin="true" expand="files" spacing="true">
            <hbox spacing="true" margin="true">
                <button action="files.refresh" icon="icons/refresh.png"/>
                <button action="files.create" icon="icons/create.png"/>
                <button action="files.edit" icon="icons/edit.png"/>
                <button action="files.remove" icon="icons/remove.png"/>
                <button action="files.excel" icon="icons/excel.png"/>
            </hbox>
            <table id="files" editable="false">
                <columns>
                    <column id="name" caption="msg://name"/>
                    <column id="extension" caption="msg://extension"/>
                    <column id="size" caption="msg://size"/>
                    <column id="createDate" caption="msg://createDate"/>
                </columns>
                <rows datasource="filesDs"/>
            </table>
        </vbox>
    </layout>
</window>
