<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.web.app.ui.serverlogviewer.ControlLoggerWindow"
        messagesPack="com.haulmont.cuba.web.app.ui.serverlogviewer"
        caption="msg://controlLogger">

    <layout>
        <vbox id="addBox" spacing="true" stylename="separator">
            <hbox spacing="true" margin="true">
                <button id="addButton" caption="msg://add" icon="icons/add.png" invoke="addLogger"/>
                <lookupField id="lookupFieldLogger" width="275px"/>
            </hbox>

            <scrollbox id="loggersGroupBox" colspan="1" height="310">
                <grid id="loggersGrid" stylename="edit-area">
                    <columns>
                        <column/>
                        <column/>
                    </columns>
                    <rows>
                        <row>
                            <label id="labelNameLogger" value="msg://loggerName" align="MIDDLE_CENTER" stylename="bold"/>
                            <label id="labelNameLevels" value="msg://level" align="MIDDLE_CENTER" stylename="bold"/>
                        </row>
                    </rows>
                </grid>

            </scrollbox>

            <hbox spacing="true">
                <button id="setButton" caption="msg://setButton" icon="icons/ok.png" invoke="setButton"/>
                <button id="cancelButton" caption="msg://cancelButton" icon="icons/cancel.png" invoke="cancelButton"/>
            </hbox>
        </vbox>

    </layout>
</window>

