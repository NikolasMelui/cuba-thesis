<window
    xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
    messagesPack="com.haulmont.cuba.web.app.ui.security.group"
    class="com.haulmont.cuba.web.app.ui.security.group.lookup.GroupLookup"
    lookupComponent="groups"
    caption="msg://browser.caption"
>
    <dsContext>
        <hierarchicalDatasource
            id="groups"
            class="com.haulmont.cuba.security.entity.Group"
            view="group.browse"
            hierarchyProperty="parent"
        >
            <query><![CDATA[select g from sec$Group g]]></query>
        </hierarchicalDatasource>
    </dsContext>

    <layout>
        <tree id="groups">
            <treechildren datasource="groups" captionProperty="name" hierarchyProperty="parent"/>
        </tree>
    </layout>
</window>
