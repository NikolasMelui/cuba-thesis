<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.web.app.ui.core.settings.SettingsWindow"
        messagesPack="com.haulmont.cuba.web.app.ui.core.settings"
        >

    <dsContext/>
    
    <layout expand="mainPane">
        <vbox id="mainPane" expand="spring" margin="true" spacing="true">
            <vbox id="main" stylename="edit-area" margin="true" spacing="true">
                <grid spacing="true" expandable="false">
                    <columns>
                        <column flex="1"/>
                        <column flex="1"/>
                    </columns>
                    <rows>
                        <row>
                            <label value="msg://mainWindowMode"/>
                            <optionsGroup id="mainWindowMode"/>
                        </row>
                        <row>
                            <label value="msg://mainWindowTheme"/>
                            <lookupField id="mainWindowTheme" required="true" width="150"
                                         requiredMessage="mainWindowThemeMsg"/>
                        </row>
                        <row>
                            <button id="changePassw" icon="icons/change-pass.png"/>
                        </row>
                    </rows>
                </grid>
            </vbox>
            <hbox align="MIDDLE_LEFT" spacing="true" margin="true">
                <button id="ok" icon="icons/ok.png"/>
                <button id="cancel" icon="icons/cancel.png"/>
            </hbox>
            <vbox id="spring"/>
        </vbox>
    </layout>
</window>