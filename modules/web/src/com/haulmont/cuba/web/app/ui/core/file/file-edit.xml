<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.web.app.ui.core.file.FileEditor"
        datasource="fileDs"
        caption="msg://editorCaption">

    <metadataContext>
        <deployViews name="/com/haulmont/cuba/web/app/ui/core/file/file.views.xml"/>
    </metadataContext>

    <dsContext>
        <datasource id="fileDs" class="com.haulmont.cuba.core.entity.FileDescriptor" view="browse"/>
    </dsContext>

    <layout>
        <vbox margin="true" spacing="true" expand="spring">
            <upload id="uploadField"/>
            <grid spacing="true" margin="true" stylename="edit-area">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://name"/>
                        </vbox>
                        <textField id="name" datasource="fileDs" property="name"
                                   width="200px"/>
                    </row>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://extension"/>
                        </vbox>
                        <label id="extension" datasource="fileDs" property="extension"/>
                    </row>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://size"/>
                        </vbox>
                        <label id="size" datasource="fileDs" property="size"/>
                    </row>
                    <row>
                        <vbox align="MIDDLE_RIGHT">
                            <label value="msg://createDate"/>
                        </vbox>
                        <label id="createDate" datasource="fileDs" property="createDate"/>
                    </row>
                </rows>
            </grid>
            <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
            <vbox id="spring"/>
        </vbox>
    </layout>
</window>
