<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.web.app.ui.serverlogviewer.ServerLogWindow"
        messagesPack="com.haulmont.cuba.web.app.ui.serverlogviewer"
        caption="msg://serverLog"
        focusComponent="logFileNamesField">

    <timers>
        <timer id="timer" delay="5000" repeating="true"/>
    </timers>

    <layout expand="logsBox" spacing="true">
        <tabSheet width="100%">
            <tab id="viewTab" caption="msg://viewTab" margin="true">
                <hbox id="logSelectBox" spacing="true" expandable="false">
                    <label id="labelLogFile" value="msg://logFile"/>
                    <lookupField id="logFileNamesField" width="210px"/>
                    <button id="downloadButton" caption="msg://downloadButton" invoke="download"/>
                    <button id="showTailButton" caption="msg://showTailButton" invoke="showTail"/>
                    <checkBox id="autoRefreshCheck" caption="msg://autoRefreshCheck"/>
                </hbox>
            </tab>
            <tab id="optionsTab" caption="msg://optionsTab" margin="true">
                <hbox id="logLevelBox" spacing="true" expandable="false">
                    <label id="labelLogName" value="msg://loggerName"/>
                    <lookupField id="logNameField" width="300px"/>
                    <label id="labelLevel" value="msg://level"/>
                    <lookupField id="levelField" width="80px"/>
                    <button id="getButton" invoke="getLevel" caption="msg://getButton"/>
                    <button id="setButton" invoke="setLevel" caption="msg://setButton"/>
                    <button id="controlLoggerButton" invoke="callControlLogger" caption="msg://control"/>
                </hbox>
            </tab>
        </tabSheet>

        <groupBox id="logsBox" width="100%" caption="msg://logs">
            <hbox id="logFieldBox" height="100%" width="100%">
            </hbox>
        </groupBox>
    </layout>
</window>

