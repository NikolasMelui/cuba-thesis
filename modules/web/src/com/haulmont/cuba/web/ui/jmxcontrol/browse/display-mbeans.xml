<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.web.ui.jmxcontrol.browse.MbeansDisplayWindow"
        messagesPack="com.haulmont.cuba.web.ui.jmxcontrol.browse"
        caption="msg://displayMbeans.title"
        focusComponent="mbeans">

    <metadataContext>
    </metadataContext>

    <dsContext>
        <collectionDatasource
                id="mbeanDs"
                class="com.haulmont.cuba.jmxcontrol.entity.ManagedBeanInfo"
                 view="_local">
            <datasourceClass>com.haulmont.cuba.web.ui.jmxcontrol.ds.ManagedBeanInfoDatasource</datasourceClass>
        </collectionDatasource>
    </dsContext>

    <layout expand="table-panel">
        <vbox id="table-panel" expand="table" spacing="true">
            <treeTable id="mbeans" editable="false">
                <buttonsPanel>
                    <button action="mbeans.refresh" icon="icons/refresh.png"/>
                    <button action="mbeans.inspect"  icon="icons/edit.png"/>
                </buttonsPanel>
                <columns>
                    <column id="domain" caption="msg://mbean.domain"/>
                    <column id="objectName" caption="msg://mbean.name"/>
                    <column id="description" caption="msg://mbean.description"/>
                </columns>
                <rows datasource="mbeanDs"/>
            </treeTable>
        </vbox>
    </layout>
</window>
