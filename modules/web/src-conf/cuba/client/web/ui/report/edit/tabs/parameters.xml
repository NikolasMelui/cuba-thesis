<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd">
    <#assign width = 200>
    <#assign treeHeight = 400>
    <#assign treeWidth = 500>
    <layout expandLayout="true">
        <vbox spacing="true" expand="inputParametersTable">
            <label value="msg://report.parameters" stylename="h2"/>
            <hbox spacing="true" margin="true">
                <button action="inputParametersTable.create"/>
                <button action="inputParametersTable.edit" caption="msg://parametersFrame.editParameter"/>
                <button action="inputParametersTable.remove" caption="msg://parametersFrame.removeParameter"/>
                <button id="up"/>
                <button id="down"/>
            </hbox>
            <table id="inputParametersTable" sortable="true" height="100%">
                <columns>
                    <column id="name" caption="msg://parameters.name"/>
                    <column id="alias" caption="msg://parameters.alias"/>
                    <column id="type" caption="msg://parameters.type"/>
                    <column id="required" caption="msg://parameters.required"/>
                </columns>
                <rows datasource="parametersDs"/>
            </table>
        </vbox>
    </layout>
</window>
