<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="cuba.client.web.ui.report.browse.ReportBrowser"
        messagesPack="cuba.client.web.ui.report"
        lookupComponent="table"
        caption="msg://reportBrowser"
        >


    <metadataContext>
        <deployViews name="/com/haulmont/cuba/web/app/ui/report/report.views.xml"/>
    </metadataContext>

    <dsContext>
        <collectionDatasource
                id="reportDs"
                class="com.haulmont.cuba.report.Report"
                view="_local"
                >
            <query>
                <![CDATA[select r from report$Report r]]>
                <filter>
                    <and>
                        <c join=",report$ReportInputParameter p">p.report.id = r.id and p.className like
                            :param$javaClassName
                        </c>
                    </and>
                </filter>
            </query>
        </collectionDatasource>
    </dsContext>

    <layout expand="table-panel">
        <vbox id="table-panel" expand="table" spacing="true">
            <hbox align="MIDDLE_LEFT" spacing="true" margin="true">
                <button action="table.create" caption="msg://create" icon="icons/create.png"/>
                <button action="table.edit" caption="msg://edit" icon="icons/edit.png"/>
                <button action="table.remove" caption="msg://remove" icon="icons/remove.png"/>
                <label/>
                <button id="import"/>
                <button id="export"/>
                <label/>
                <button id="runReport" icon="icons/run.png"/>
            </hbox>
            <table id="table" editable="false" multiselect="true">
                <columns>
                    <column id="name" caption="msg://report.name"/>
                </columns>
                <rows datasource="reportDs"/>
            </table>
        </vbox>
    </layout>
</window>
