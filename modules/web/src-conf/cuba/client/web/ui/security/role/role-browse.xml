<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="cuba.client.web.ui.security.role.RoleBrowser"
        lookupComponent="roles"
        >

    <dsContext>
        <collectionDatasource id="roles" class="com.haulmont.cuba.security.entity.Role" view="_local">
            <query>
                select r from sec$Role r
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="table-panel" expand="roles" spacing="true">
            <hbox align="MIDDLE_LEFT" spacing="true" margin="true">
                <button action="roles.create" icon="icons/create.png"/>
                <button action="roles.edit" icon="icons/edit.png"/>
                <button action="roles.excel" icon="icons/excel.png"/>
            </hbox>
            <table id="roles" editable="false">
                <columns>
                    <column id="name" caption="msg://role.name"  clickAction="open:sec$Role.edit"/>
                </columns>
                <rows datasource="roles"/>
            </table>
        </vbox>
    </layout>
</window>